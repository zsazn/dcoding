server {
	listen 80;
	listen [::]:80;
	server_name wenjiewu.com www.wenjiewu.com;
    return 301 https://$server_name$request_uri;

    if ($server_name = www.wenjiewu.com) {
        return 301 https://$server_name$request_uri;
    } # managed by Certbot

    if ($server_name = wenjiewu.com) {
        return 301 https://$server_name$request_uri;
    } # managed by Certbot


server {
    add_header Strict-Transport-Security "max-age=31530000; includeSubDomains" always;
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name weijiewu.com www.wenjiewu.com;

    ssl                       on;
    ssl_certificate           /etc/letsencrypt/live/wenjiewu.com/fullchain.pem;
    ssl_certificate_key       /etc/letsencrypt/live/wenjiewu.com/privkey.pem;
    include                   /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam               /etc/letsencrypt/ssl-dhparams.pem;

    keepalive_timeout 5;

    access_log /var/log/nginx/wenjie/portfolio/access.log;
    error_log  /var/log/nginx/wenjie/portfolio/error.log;

    root /opt/wenjie/www;
    index index.html index.htm;

    location / {
        try_files $uri $uri/ =404;
    }
}
